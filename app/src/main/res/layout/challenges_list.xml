<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <LinearLayout
        android:id="@+id/friend_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:background="@drawable/card"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/challenge_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:src="@drawable/challenge_icon_greymdpi"
            android:layout_gravity="center"
            android:padding="10dp" />

        <LinearLayout
            android:id="@+id/userDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="12dp">

            <TextView
                android:id="@+id/challengeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Challenge: 1"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:textColor="@color/colorGreyText"
                android:paddingBottom="5dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Time: "
                    android:textSize="15sp"
                    android:paddingTop="2dp"
                    android:textStyle="italic"
                    android:textColor="@color/colorGreyText"
                    />

                <TextView
                    android:id="@+id/startTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="33"
                    android:textSize="15sp"
                    android:paddingTop="2dp"
                    android:textStyle="italic"
                    android:textColor="@color/colorGreyText"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Time: "
                    android:textSize="15sp"
                    android:paddingTop="2dp"
                    android:textStyle="italic"
                    android:textColor="@color/colorGreyText"
                    />

                <TextView
                    android:id="@+id/endTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="41"
                    android:textSize="15sp"
                    android:paddingTop="2dp"
                    android:textStyle="italic"
                    android:textColor="@color/colorGreyText"
                    />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="20dp"
            >

            <ImageView
                android:id="@+id/start_challenge_buttpn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/start_challenge_xhdpi"

                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>